<?xml version="1.0" encoding="UTF-8"?>
<project name="agenda" default="compile" basedir=".">

  <target name="compile">
    <mkdir dir="build"/>
    <javac srcdir="src" destdir="build" debug="true" debuglevel="source" />
  </target>

  <target name="run" depends="compile">
    <java classname="icc.agenda.UsoBaseDeDatosAgenda" fork="true">
      <classpath>
	<pathelement path="build" />
      </classpath>
    </java>
  </target>

  <target name="docs">
    <javadoc sourcepath="src" destdir="docs" packagenames="icc.agenda,icc.util" />
  </target>

  <target name="clean">
    <delete dir="build"/>
    <delete dir="docs"/>
  </target>

</project>
